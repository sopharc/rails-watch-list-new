<%# delete not working %>


<div class="container">
<div class="row">
    <% @list.movies.each do |movie| %>
      <div class="list-card co-12 col-sm-4 col-md-2 mt-3">
          <div class="movie-image">
            <img src="<%= movie.poster_url%>" alt="">
          </div>
          <div class="movie-info d-flex justify-content-between align-items-center mt-3 p-2">
            <p><%= movie.title %></p>
            <p><i class="fa-solid fa-bookmark bookmark-icon"></i><%bookmark = Bookmark.find_by(list: @list, movie: movie) %></p>
          </div>
          <div class="movie-delete p-2">
          <hr>
              <p class="text-danger fw-bold"><%= link_to "Delete", delete_bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Remove #{movie.title} from your #{@list.name} list?" }, class: 'text-danger' %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>


